int answer = 40 + 2;

int factorial_rec( int x ) {
    if ( x == 0 )
        return 1;
    else if ( x > 0 )
        return x * factorial_rec( x - 1 );
    return -1;
}

int factorial_iter( int x ) {
    if ( x < 0 )
        return -1;
    int product = 1;
    while ( x > 0 ) {
        product = product * x;
        x -= 1;
    }
    return product;
}
